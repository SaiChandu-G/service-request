<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Employee Service Request</display-name>
	<servlet>
		<servlet-name>createRequest</servlet-name>
		<servlet-class>com.arshaa.request.ServiceRequestServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>createRequest</servlet-name>
		<url-pattern>/create</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>getRequests</servlet-name>
		<servlet-class>com.arshaa.request.AllRequestsServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>getRequests</servlet-name>
		<url-pattern>/requests</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>updateRequest</servlet-name>
		<servlet-class>com.arshaa.request.UpdateRequestServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>updateRequest</servlet-name>
		<url-pattern>/request</url-pattern>
	</servlet-mapping>

</web-app>
